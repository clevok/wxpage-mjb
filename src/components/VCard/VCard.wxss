.v-card {
    font-size: 24rpx;
    line-height: 34rpx;
}
.v-card-img {
    position: relative;
    padding-top: 61.8%;
    background-color: #eeeeee;
    border-radius: 6px;
    overflow: hidden;
    background-size: cover;
    background-position: center;
}

.v-card-img>.tips {
    position: absolute;
    bottom: 6px;
    right: 6px;

    padding: 2px 6px;
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    font-size: 10px;
    border-radius: 10px;
}

.v-card-title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-weight: 700;

    margin-top: 18rpx;
    margin-bottom: 4rpx;

    font-size: 28rpx;
    line-height: 40rpx;
}

@media screen and (min-width: 768px) {
    .v-card {
        font-size: 13px;
        line-height: 17px;
    }
    .v-card-title {
        margin-top: 9px;
        margin-bottom: 2px;
    
        font-size: 14px;
        line-height: 20px;
    }
}