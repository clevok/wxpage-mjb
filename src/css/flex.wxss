.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.flex.wrap {
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
}
.flex.nowrap {
    -webkit-flex-wrap: nowrap;
    flex-wrap: nowrap;
}
.flex.column {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    flex-direction: column;
}
.flex.column-reverse {
    -webkit-box-orient: vertical;
    -webkit-box-direction: reverse;
    -webkit-flex-direction: column-reverse;
    flex-direction: column-reverse;
}
.flex.row-reverse {
    flex-direction: row-reverse;
}
.flex.justify-start {
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
    justify-content: flex-start;
}
.flex.justify-end {
    -webkit-box-pack: end;
    -webkit-justify-content: flex-end;
    justify-content: flex-end;
}
.flex.justify-center {
    justify-content: center;
}
.flex.justify-between {
    justify-content: space-between;
}
.flex.justify-around {
    justify-content: space-around;
}
.flex.align-start {
    align-items: flex-start;
}
.flex.align-end {
    align-items: flex-end;
}
.flex.align-center {
    align-items: center;
}
.flex.align-stretch {
    align-items: stretch;
}

.align-self-center {
    align-self: center;
}
.align-self-start {
    align-self: flex-start;
}
.align-self-stretch {
    align-self: stretch;
}

.fd--column {
    display: flex;
    flex-direction: column;
}

.fx--between {
    display: flex;
    box-sizing: border-box;

    justify-content: space-between;
}
.fx--between.align-center {
    align-items: center;
}

.fx--around {
    display: flex;
    box-sizing: border-box;

    justify-content: space-around;
}
.fx--center {
    display: flex;
    box-sizing: border-box;
    justify-content: center;
}
.fy--center.justify-end {
    justify-content: flex-end;
}
.fy--center {
    display: flex;
    box-sizing: border-box;
    align-items: center;
}
.fxy--center {
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

.box-size {
    box-sizing: border-box;
}
.content-box {
    box-sizing: content-box;
}
.flex-1 {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}
.flex-2 {
    -webkit-box-flex: 2;
    -webkit-flex: 2;
    flex: 2;
}
.flex-3 {
    flex: 3;
    flex-grow: 3;
}
.flex-4 {
    flex: 4;
    flex-grow: 4;
}
.flex-5 {
    flex: 5;
    flex-grow: 5;
}
.col-6 {
    box-sizing: border-box;
    width: 50%
}
.col-4 {
    box-sizing: border-box;
    width: 33.33%
}
.col-3 {
